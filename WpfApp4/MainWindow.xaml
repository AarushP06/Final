<Page x:Class="WpfApp1.Exercise5"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exercise5">

    <Page.Resources>

        <!-- STYLE FOR FOREGROUND RADIOBUTTONS -->
        <Style x:Key="ColorRadioStyle" TargetType="RadioButton">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0 5 0 5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>

            <Style.Triggers>
                <!-- When selected, apply the color of Content -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground"
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                    <Setter Property="Background"
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>


    <StackPanel Margin="40">

        <!-- Foreground Color Section -->
        <TextBlock Text="Foreground Color:"
                   FontSize="24"
                   Margin="0 0 0 10"/>

        <StackPanel Margin="20 0 0 20">

            <RadioButton Content="Red"
                         GroupName="ForegroundGroup"
                         Foreground="Red"
                         Style="{StaticResource ColorRadioStyle}"/>

            <RadioButton Content="Blue"
                         GroupName="ForegroundGroup"
                         Foreground="Blue"
                         Style="{StaticResource ColorRadioStyle}"/>

            <RadioButton Content="Green"
                         GroupName="ForegroundGroup"
                         Foreground="Green"
                         Style="{StaticResource ColorRadioStyle}"/>

        </StackPanel>


        <!-- Background Color Section -->
        <TextBlock Text="Background Color:"
                   FontSize="24"
                   Margin="0 10 0 10"/>

        <StackPanel Margin="20 0 0 0">

            <RadioButton Content="Red"
                         GroupName="BackgroundGroup"
                         Foreground="Red"
                         Style="{StaticResource ColorRadioStyle}"/>

            <RadioButton Content="Blue"
                         GroupName="BackgroundGroup"
                         Foreground="Blue"
                         Style="{StaticResource ColorRadioStyle}"/>

            <RadioButton Content="Green"
                         GroupName="BackgroundGroup"
                         Foreground="Green"
                         Style="{StaticResource ColorRadioStyle}"/>

        </StackPanel>

    </StackPanel>

</Page>
