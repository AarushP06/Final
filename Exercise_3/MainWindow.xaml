<Page x:Class="WpfApp1.Exercise3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exercise3">

    <StackPanel Margin="40">

        <CheckBox x:Name="EngineCheck"
                  Content="Engine Off"
                  FontSize="28"
                  IsThreeState="True"
                  Click="EngineCheck_Click"
                  Margin="0 0 0 20"/>

        <StackPanel Margin="30 0 0 0">

            <CheckBox x:Name="AudioCheck"
                      Content="Enable Audio"
                      FontSize="20"
                      IsEnabled="False"/>

            <CheckBox x:Name="WipersCheck"
                      Content="Enable Wipers"
                      FontSize="20"
                      IsEnabled="False"/>

            <CheckBox x:Name="ACCheck"
                      Content="Enable AC"
                      FontSize="20"
                      IsEnabled="False"/>

        </StackPanel>

    </StackPanel>

</Page>
